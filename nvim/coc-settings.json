{
  "explorer.icon.enableNerdfont": true,
  "explorer.position": "left",
  "explorer.quitOnOpen": true,
  "explorer.buffer.showHiddenBuffers": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.file.git.showUntrackedFiles":true,

  "highlight.colors.enable": true,
  "highlight.document.enable": true,
  "highlight.colorNames.enable": true,

  "list.source.mru.ignoreGitIgnore": true,
  
  "emmet.includeLanguages": {"javascript": "javascriptreact", "typescript": "typescriptreact"},

  "coc.preferences.colorSupport": true,
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "javascript",
    "javascriptreact",
    "typescriptreact",
    "css"
  ],

  "javascript.preferences.quoteStyle": "single",
    "snippets.extends": {
    "javascript": ["javascript", "css", "html"]
  },

  "git.enableGutters": true,

  "markdownlint.config": {
    "line_length": false
  },

  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.jsxSingleQuote": false,
  "prettier.jsxBracketSameLine": false,
  "prettier.onlyUseLocalVersion": true
}
