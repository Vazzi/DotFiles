[core]
	excludesfile = ~/.gitignore_global
	editor = nvim
[push]
	default = simple
[alias]
	st = status --short --branch
	lol = log --all --graph --decorate --oneline --abbrev-commit
	diffc = diff --cached
	dt = difftool
[diff]
  tool = nvimdiff
  noprefix = true
  renames = copies
[difftool]
  prompt = true
[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[merge]
  tool = vimdiff
[mergetool "vimdiff"]
  path = nvim
