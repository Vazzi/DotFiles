export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# History
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000

# History settings
setopt HIST_VERIFY
setopt EXTENDED_HISTORY
setopt HIST_REDUCE_BLANKS
setopt SHARE_HISTORY
setopt HIST_IGNORE_ALL_DUPS

# Complete aliases
setopt COMPLETE_ALIASES

autoload -Uz compinit
compinit

# Set key binding to emacs (no insert/normal mode)
bindkey -e

# Use Vim as text editor
export EDITOR=nvim

if [[ "$OSTYPE" == "darwin15.0" ]]; then
    # Syntax Highlight
    source /usr/local/Cellar/zsh-syntax-highlighting/0.2.1/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
    # PowerLine
    source /usr/local/lib/python3.5/site-packages/powerline/bindings/zsh/powerline.zsh
elif [[ "$OSTYPE" = "linux-gnu" ]]; then
    # Syntax Highlight
    source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
    # PowerLine
    source ~/.local/lib/python3.5/site-packages/powerline/bindings/zsh/powerline.zsh
fi

# History
bindkey '^R' history-incremental-search-backward

# Virtual env for python
export WORKON_HOME='~/Development/Python/Environments/'
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python3
source /usr/local/bin/virtualenvwrapper.sh
export PATH="/usr/local/sbin:$PATH"

# Aliases
# Tmux aliases
alias ta='tmux attach'
alias tat='tmux attach -t'
alias tls='tmux ls'
alias tn='tmux new-session -s'

